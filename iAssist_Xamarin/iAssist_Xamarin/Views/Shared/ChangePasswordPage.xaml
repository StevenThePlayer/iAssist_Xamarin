<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iAssist_Xamarin.Views.ChangePasswordPage"
             xmlns:viewmodel="clr-namespace:iAssist_Xamarin.ViewModels"
             Title="{Binding Subtitle}">
    <ContentPage.BindingContext>
        <viewmodel:ChangePasswordViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center">
            <Label FontSize="Title" HorizontalTextAlignment="Center" Text="{Binding Title}"></Label>
            <Label>Old Password:</Label>
            <Entry Text="{Binding OldPassword}" IsPassword="True"/>
            <Label>New Password:</Label>
            <Entry Text="{Binding NewPassword}" IsPassword="True"/>
            <Label>Confirm New Password:</Label>
            <Entry Text="{Binding ConfirmNewPassword}" IsPassword="True"/>
            <Label Text="{Binding Message}" TextColor="Red"/>
            <ActivityIndicator Color="Green" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
            <Button VerticalOptions="Center" Text="Change Password" Command="{Binding ChangePasswordCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>